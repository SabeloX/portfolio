generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Skills {
  id    String   @id @default(cuid())
  title String
  data  String[]
}

model Projects {
  title       String   @unique
  concepts    String[]
  tools       String[]
  description String
  source      String
  demo        String
  image String
}

model Details {
  name  String @unique
  surname String
  contact String
  email String
  profession  String
  slogan  String
}